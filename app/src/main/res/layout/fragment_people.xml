<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.people.PeopleFragment">

    <!-- Bandeau "X visages à identifier" -->
    <TextView
        android:id="@+id/textPeopleToIdentify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondaryContainer"
        android:padding="12dp"
        android:text="@string/people_to_identify_count"
        android:textColor="?attr/colorOnSecondaryContainer" />

    <!-- Zone de contenu (superposition des états) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/people_empty" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPeople"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>