<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- ViewPager2 pour swipe entre photos - plein écran -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerPhotos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Panel d'informations glissant depuis le bas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panelInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_panel_rounded_top"
        android:fitsSystemWindows="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Zone de drag élargie (remplace le View dragHandle actuel) -->
        <FrameLayout
            android:id="@+id/dragHandleContainer"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Poignée visuelle centrée -->
            <ImageView
                android:id="@+id/dragHandle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/action_handle"
                android:src="@drawable/vector_drag_handle"
                app:tint="?attr/colorOnSurfaceVariant" />
        </FrameLayout>

        <!-- Conteneur scrollable pour les infos -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dragHandleContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <!-- Section : Métadonnées de base -->
                <TextView
                    android:id="@+id/textSectionMetadata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewer_info"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Date d'ajout -->
                <TextView
                    android:id="@+id/textDateAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_calendar"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Date de prise -->
                <TextView
                    android:id="@+id/textDateTake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_calendar"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Dimensions -->
                <TextView
                    android:id="@+id/textDimensions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_dimensions"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Taille fichier -->
                <TextView
                    android:id="@+id/textFileSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_file_size"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Appareil photo -->
                <TextView
                    android:id="@+id/textCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_camera"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Type d'image -->
                <TextView
                    android:id="@+id/textImageType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_camera_type"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Localisation (Texte) -->
                <TextView
                    android:id="@+id/textLocationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_location"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Localisation (Coordonnées) -->
                <TextView
                    android:id="@+id/textLocationCoordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    app:drawableStartCompat="@drawable/vector_location"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Chemin du fichier -->
                <TextView
                    android:id="@+id/textPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="12dp"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="@string/viewer_no_info_short"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:drawableStartCompat="@drawable/vector_folder"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- Divider -->
                <View
                    android:id="@+id/dividerAi"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/colorOutlineVariant" />

                <!-- Section : IA -->
                <TextView
                    android:id="@+id/textSectionAi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/viewer_ai_section"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Description IA -->
                <LinearLayout
                    android:id="@+id/layoutDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viewer_description"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/viewer_no_info_short"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- Tags IA -->
                <LinearLayout
                    android:id="@+id/layoutTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viewer_tags"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Personnes détectées -->
                <LinearLayout
                    android:id="@+id/layoutPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viewer_people"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupPeople"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Texte OCR -->
                <LinearLayout
                    android:id="@+id/layoutOcr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viewer_ocr"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/textOcr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/viewer_no_info_short"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- Espacement final -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
